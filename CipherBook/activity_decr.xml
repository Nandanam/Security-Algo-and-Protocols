<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_deep_teal_500">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter key "
        android:id="@+id/deckey"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextdec"
        android:maxLength="16"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/deckey"
        android:layout_toEndOf="@+id/deckey"
        android:background="@color/switch_thumb_disabled_material_dark"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:hint="Enter decryption key" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decrypt "
        android:id="@+id/buttondec"
        android:background="@android:color/holo_orange_dark"
        android:textStyle="normal|bold"
        android:textColor="@color/bright_foreground_inverse_material_dark"
        android:layout_alignTop="@+id/buttonred"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/buttondq"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_green_dark"
        android:textColor="@color/bright_foreground_inverse_material_dark"
        android:textStyle="normal|bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView5"
        android:background="@color/abc_search_url_text_normal"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:hint="Decrypted Result"
        android:layout_below="@+id/buttonred"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="52dp"
        android:layout_toEndOf="@+id/buttondec" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CipherBook"
        android:id="@+id/textView6"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/buttonred" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read File"
        android:id="@+id/buttonred"
        android:textStyle="normal|bold"
        android:background="@android:color/holo_blue_light"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/buttonclearr"
        android:layout_alignTop="@+id/buttonred"
        android:layout_alignParentEnd="true"
        android:background="@android:color/darker_gray"
        android:textColor="@color/abc_search_url_text_pressed"
        android:textStyle="normal|bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/buttonx"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/background_light"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextCip"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:background="@color/switch_thumb_disabled_material_dark"
        android:layout_below="@+id/editTextdec"
        android:layout_alignStart="@+id/editTextdec"
        android:layout_marginTop="56dp"
        android:layout_alignEnd="@+id/editTextdec"
        android:hint="Cipher Text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cipher Text"
        android:id="@+id/textView7"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/editTextCip"
        android:layout_alignBottom="@+id/editTextCip"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/buttondec" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewunloc"
        android:background="@drawable/unlock"
        android:layout_alignBottom="@+id/buttondq"
        android:layout_alignStart="@+id/editTextCip"
        android:layout_below="@+id/textView5"
        android:layout_alignEnd="@+id/buttonred"
        android:visibility="invisible" />



</RelativeLayout>